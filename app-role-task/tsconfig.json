{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [ "es2016", "dom" ],
    "sourceMap": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": [
        "node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts"]
}